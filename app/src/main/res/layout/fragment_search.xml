<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SearchFragment">

  <SearchView
    android:id="@+id/searchView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="44dp"
    android:layout_marginEnd="24dp"
    android:layout_marginStart="24dp"
    android:background="@drawable/rounded_border"
    android:iconifiedByDefault="false"
    android:layoutDirection="rtl"
    android:queryBackground="@android:color/transparent"
    android:queryHint="@string/search_location"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />


  <TextView
    android:id="@+id/currentLocation"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/poppins_bold"
    android:gravity="center_horizontal"
    android:lineHeight="45sp"
    tools:text="@string/currentlocation_text"
    android:textAlignment="center"
    android:textAppearance="@style/hyderabad"
    android:textColor="@color/black"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="@+id/searchView"
    app:layout_constraintStart_toStartOf="@+id/searchView"
    app:layout_constraintTop_toBottomOf="@+id/searchView" />

  <TextView
    android:id="@+id/dot"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    android:fontFamily="@font/poppins_bold"
    android:gravity="center_horizontal"
    android:textSize="15sp"
    android:lineHeight="105sp"
    android:text="&#xb0;"
    android:textAlignment="center"
    android:textColor="@color/black"
    app:layout_constraintStart_toEndOf="@+id/temperature"
    app:layout_constraintTop_toBottomOf="@+id/currentLocation" />

  <TextView
    android:id="@+id/temperature"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    android:fontFamily="@font/poppins_bold"
    android:gravity="center_horizontal"
    android:lineHeight="105sp"
    android:text="31"
    android:textAlignment="center"
    android:textAppearance="@style/Celisus_text"
    android:textColor="@color/black"
    app:layout_constraintEnd_toEndOf="@+id/imageView"
    app:layout_constraintStart_toStartOf="@+id/currentLocation"
    app:layout_constraintTop_toBottomOf="@+id/currentLocation" />

  <ImageView
    android:id="@+id/imageView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_margin="12dp"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:src="@drawable/ic_location_icon"
    app:layout_constraintBottom_toBottomOf="@+id/currentLocation"
    app:layout_constraintStart_toEndOf="@+id/currentLocation"
    app:layout_constraintTop_toTopOf="@+id/currentLocation" />

  <com.google.android.material.card.MaterialCardView
    android:layout_width="0dp"
    app:shapeAppearanceOverlay="@style/MyCardView"
    android:backgroundTint="@color/TinyWhite"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="@+id/searchView"
    app:layout_constraintStart_toStartOf="@+id/searchView"
    app:layout_constraintTop_toBottomOf="@+id/temperature" >

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <TextView
        android:id="@+id/timeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:padding="10dp"
        android:text="Time"
        android:textAppearance="@style/textColors"
        android:textStyle="bold"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

      <TextView
        android:id="@+id/uvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="UV"
        app:layout_constraintBottom_toBottomOf="@id/timeLabel"
        android:textAppearance="@style/textColors"

        app:layout_constraintEnd_toStartOf="@+id/rainLabel"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/timeLabel"
        app:layout_constraintTop_toTopOf="@id/timeLabel"></TextView>

      <TextView
        android:id="@+id/rainLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="% Rain"
        android:textAppearance="@style/textColors"

        app:layout_constraintBottom_toBottomOf="@+id/uvLabel"
        app:layout_constraintEnd_toStartOf="@id/AQLabel"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/uvLabel"
        app:layout_constraintTop_toTopOf="@+id/uvLabel"></TextView>

      <TextView
        android:id="@+id/AQLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:padding="10dp"
        android:text="AQ"
        android:textAppearance="@style/textColors"
        app:layout_constraintBottom_toBottomOf="@+id/rainLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="@+id/rainLabel"></TextView>


      <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11:25 am"
        android:textAlignment="center"
        android:layout_marginBottom="12dp"
        android:textColor="@color/editableTexts"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/timeLabel"
        app:layout_constraintStart_toStartOf="@+id/timeLabel"
        app:layout_constraintTop_toBottomOf="@+id/timeLabel"></TextView>

      <TextView
        android:id="@+id/uv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="4"
        android:textAlignment="center"
        android:layout_marginBottom="12dp"
        android:textColor="@color/editableTexts"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/uvLabel"
        app:layout_constraintStart_toStartOf="@+id/uvLabel"
        app:layout_constraintTop_toBottomOf="@+id/uvLabel" />
      <TextView
        android:id="@+id/rain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="58%"
        android:textAlignment="center"
        android:layout_marginBottom="12dp"
        android:textColor="@color/editableTexts"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/rainLabel"
        app:layout_constraintStart_toStartOf="@+id/rainLabel"
        app:layout_constraintTop_toBottomOf="@+id/rainLabel"></TextView>
      <TextView
        android:id="@+id/AQ"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="4"
        android:textAlignment="center"
        android:layout_marginBottom="12dp"
        android:textColor="@color/editableTexts"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/AQLabel"
        app:layout_constraintStart_toStartOf="@+id/AQLabel"
        app:layout_constraintTop_toBottomOf="@+id/AQLabel"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

  </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>
