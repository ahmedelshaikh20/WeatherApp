<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SearchFragment">


  <SearchView
    android:id="@+id/searchView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="44dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:background="@drawable/rounded_border"
    android:iconifiedByDefault="false"
    android:layoutDirection="rtl"
    android:queryBackground="@android:color/transparent"
    android:queryHint="@string/search_location"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <ImageView
    android:id="@+id/weatherIcon"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:scaleType="centerInside"
    android:src="@drawable/ic_location_icon"
    app:layout_constraintEnd_toEndOf="@+id/searchView"
    app:layout_constraintStart_toStartOf="@+id/searchView"
    app:layout_constraintTop_toBottomOf="@+id/searchView" />

  <TextView
    android:id="@+id/currentLocation"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/poppins_bold"
    android:gravity="center_horizontal"
    android:lineHeight="45sp"
    android:layout_marginTop="50dp"
    android:textAlignment="center"
    android:textAppearance="@style/hyderabad"
    android:textColor="@color/black"
    app:layout_constraintEnd_toEndOf="@+id/weatherIcon"
    app:layout_constraintStart_toStartOf="@+id/weatherIcon"
    app:layout_constraintTop_toBottomOf="@+id/weatherIcon"
    tools:text="@string/currentlocation_text" />

  <TextView
    android:id="@+id/dot"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:fontFamily="@font/poppins_bold"
    android:gravity="center_horizontal"
    android:textSize="15sp"
    android:lineHeight="105sp"
    android:text="&#xb0;"
    android:textAlignment="center"
    android:textColor="@color/black"
    app:layout_constraintStart_toEndOf="@+id/temperature"
    app:layout_constraintTop_toBottomOf="@+id/currentLocation" />

  <TextView
    android:id="@+id/temperature"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    android:fontFamily="@font/poppins_bold"
    android:gravity="center_horizontal"
    android:lineHeight="105sp"
    android:text="31"
    android:textAlignment="center"
    android:textAppearance="@style/Celisus_text"
    android:textColor="@color/black"
    app:layout_constraintEnd_toEndOf="@+id/imageView"
    app:layout_constraintStart_toStartOf="@+id/currentLocation"
    app:layout_constraintTop_toBottomOf="@+id/currentLocation" />

  <ImageView
    android:id="@+id/imageView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_margin="12dp"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:src="@drawable/ic_location_icon"
    app:layout_constraintBottom_toBottomOf="@+id/currentLocation"
    app:layout_constraintStart_toEndOf="@+id/currentLocation"
    app:layout_constraintTop_toTopOf="@+id/currentLocation" />

  <com.google.android.material.card.MaterialCardView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:backgroundTint="@android:color/transparent"
    app:cardElevation="0dp"
    app:layout_constraintEnd_toEndOf="@+id/searchView"
    app:layout_constraintStart_toStartOf="@+id/searchView"
    app:layout_constraintTop_toBottomOf="@+id/temperature"
    app:shapeAppearanceOverlay="@style/MyCardView">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <TextView
        android:id="@+id/timeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:padding="10dp"
        android:text="@string/timeLabel"
        android:textAppearance="@style/textColors"
        android:textStyle="bold"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

      <TextView
        android:id="@+id/descriptionlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Description"
        android:textAppearance="@style/textColors"
        app:layout_constraintBottom_toBottomOf="@id/timeLabel"

        app:layout_constraintEnd_toStartOf="@+id/pressureLabel"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/timeLabel"
        app:layout_constraintTop_toTopOf="@id/timeLabel" />

      <TextView
        android:id="@+id/pressureLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="@string/pressureLabel"
        android:textAppearance="@style/textColors"

        app:layout_constraintBottom_toBottomOf="@+id/descriptionlabel"
        app:layout_constraintEnd_toStartOf="@id/humidityLabel"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/descriptionlabel"
        app:layout_constraintTop_toTopOf="@+id/descriptionlabel"></TextView>

      <TextView
        android:id="@+id/humidityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:padding="10dp"
        android:text="@string/humidityLabel"
        android:textAppearance="@style/textColors"
        app:layout_constraintBottom_toBottomOf="@+id/pressureLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="@+id/pressureLabel"></TextView>


      <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:textAlignment="center"
        android:textColor="@color/editableTexts"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/timeLabel"
        app:layout_constraintStart_toStartOf="@+id/timeLabel"
        app:layout_constraintTop_toBottomOf="@+id/timeLabel"
        tools:text="@string/time"></TextView>

      <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:textAlignment="center"
        android:textColor="@color/editableTexts"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/descriptionlabel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/descriptionlabel"
        app:layout_constraintTop_toBottomOf="@+id/descriptionlabel"
        app:layout_constraintVertical_bias="0.0"
        tools:text="@string/description" />

      <TextView
        android:id="@+id/pressure"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:textAlignment="center"
        android:textColor="@color/editableTexts"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/pressureLabel"
        app:layout_constraintStart_toStartOf="@+id/pressureLabel"
        app:layout_constraintTop_toBottomOf="@+id/pressureLabel"
        tools:text="@string/pressure"></TextView>

      <TextView
        android:id="@+id/humidity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:textAlignment="center"
        android:textColor="@color/editableTexts"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/humidityLabel"
        app:layout_constraintStart_toStartOf="@+id/humidityLabel"
        app:layout_constraintTop_toBottomOf="@+id/humidityLabel"
        tools:text="@string/humidity"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

  </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>
