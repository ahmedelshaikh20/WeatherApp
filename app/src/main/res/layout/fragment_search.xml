<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  tools:context=".ui.SearchFragment">
  <androidx.appcompat.widget.SearchView
    android:id="@+id/searhView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="44dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:background="@drawable/rounded_border"
    android:layoutDirection="rtl"
    android:padding="1dp"

    android:queryBackground="@android:color/transparent"
    app:queryHint="@string/search_location"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recyclerView"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
android:padding="8dp"
    app:layout_constraintEnd_toEndOf="@+id/searhView"
    app:layout_constraintStart_toStartOf="@+id/searhView"
    app:layout_constraintTop_toBottomOf="@+id/searhView" />

</androidx.constraintlayout.widget.ConstraintLayout>
